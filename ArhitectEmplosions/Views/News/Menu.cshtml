<!DOCTYPE html>
@{
    string[] colorMass = ["red", "blue", "green", "yellow"];
}
<html>
<head>
    <title>Новости</title>
</head>
<body>
<div style="display:flex; justify-content: center; align-items: center; height: 50em;">
    <div style="display:flex; flex-wrap: wrap; width: 70%; height: 100%; justify-content: space-between">
        @foreach (var item in colorMass)
        {
            <div style="width:30%; height: 50%;">
                <div style = "width: 100%; height: 100%; background-color: @item">
                </div>
            </div>
        }
    </div>
</div>
</body>
</html>