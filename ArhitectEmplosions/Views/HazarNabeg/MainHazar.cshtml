@model List<Models.HazarNabeg.HazarNabeg>
@{
}
<h1 title="JAJA">ХазАрхский набег</h1>

<input type="button" value="Создать ХазАрхский Набег" onclick="location.href='@Url.Action("CreateHazar", "HazarNabeg")'" />
<div style="display:flex;flex-wrap: wrap; align-content: center; flex-direction:column;">
    @foreach(var item in Model)
    {
        <div style="display:flex; justify-content:space-around; align-items:center; border:solid; border-color:blueviolet; width:70%; height: 100px; border-radius: 5px;">
            <h1>@item.Name</h1>
            <h1><a asp-controller="HazarNabeg" asp-action="ViewHazar" asp-route-id="@item.Id">Посмотреть данные</a></h1>
            <h1><a asp-controller="HazarNabeg" asp-action="AddQuestionnaire" asp-route-id="@item.Id">Добавить данные</a></h1>
            <div style="display:flex; flex-direction:column">
                <h6><a asp-controller="HazarNabeg" asp-action="LookAllQuests">Посмотреть все анкеты</a></h6>
                <h6><a asp-controller="HazarNabeg" asp-action="EditHazar">Редактировать</a></h6>
                <form asp-controller="HazarNabeg" asp-action="DelHazar">
                    <input type="submit" value ="Удалить"/>
                </form>
            </div>
        </div>
    }
</div>